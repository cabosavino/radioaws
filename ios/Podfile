source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

def sharedPods
    pod 'AlamofireCoreData'
    pod 'AlamofireImage'
    pod 'JFCore', :path => '/Users/fox/patagonia2019/jfcore'
end

def iosPods
end

target 'LDLARadio' do
    platform :ios, '12.0'
    iosPods
    sharedPods
end


target 'LDLARadioTests' do
    platform :ios, '12.0'
    pod 'AlamofireCoreData'
end

